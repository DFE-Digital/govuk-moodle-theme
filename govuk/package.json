{
  "dependencies": {
    "govuk-frontend": "^5.8.0",
    "sass": "^1.85.0"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.4",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "dotenv-cli": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "build": "npm run copy:govuk-images && sass scss/govuk.scss style/govuk.css",
    "build:prod": "npm run copy:govuk-images && sass scss/govuk.scss style/govuk.css --style=compressed",
    "copy:govuk-images": "cpx \"node_modules/govuk-frontend/dist/govuk/assets/images/**/*\" pix/images && cpx \"node_modules/govuk-frontend/dist/govuk/assets/rebrand/images/**/*\" pix/rebrand/images",
    "copy:theme": "node scripts/copy-theme.js",
    "watch:scss": "chokidar \"scss/**/*.scss\" -c \"npm run build\"",
    "watch:theme": "node scripts/copy-theme.js --watch --verbose $THEME_PATH",
    "dev": "dotenv -e .env npm-run-all --parallel watch:scss watch:theme"
  }
}
